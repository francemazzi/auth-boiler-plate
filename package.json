{
  "name": "create-express-auth",
  "version": "1.4.1",
  "description": "Create a new Express.js project with authentication using: npx create-express-auth my-app",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "main": "./bin/block-install.js",
  "bin": {
    "create-express-auth": "./bin/create-express-auth.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/francemazzi/auth-boiler-plate"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "ts-node-dev --respawn --transpile-only src/infrastructure/http/server.ts",
    "build": "tsc",
    "start": "node dist/infrastructure/http/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rimraf dist",
    "config:init": "node ./bin/init-config.js"
  },
  "engines": {
    "node": ">=18"
  },
  "preferGlobal": false,
  "keywords": [
    "express",
    "typescript",
    "prisma",
    "postgresql",
    "authentication",
    "boilerplate",
    "starter",
    "template",
    "create-app",
    "cli"
  ],
  "author": "Francesco Mazzi",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5.10.2",
    "@types/cookie-parser": "^1.4.9",
    "axios": "1.6.7",
    "bcryptjs": "2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.18.2",
    "express-validator": "7.0.1",
    "glob": "10.3.10",
    "jsonwebtoken": "9.0.2",
    "lru-cache": "10.2.0",
    "qrcode": "1.5.3",
    "speakeasy": "2.0.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.5",
    "@types/node": "20.11.20",
    "@types/qrcode": "1.5.5",
    "@types/speakeasy": "2.0.10",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-mock-extended": "3.0.5",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prisma": "5.10.2",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3"
  }
}
